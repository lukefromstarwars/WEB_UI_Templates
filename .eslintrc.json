{
  "env": {
    "browser" : true,
    "commonjs": true,
    "es6"     : true
  },
  "extends"      : "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent"    : ["off", "tab"],
    "quotes"    : ["error", "single"],
    "semi"      : ["error", "always"],
    "no-undef"  : "off",
    "no-console": "off"
  }
}
